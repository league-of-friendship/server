extends ../components/base.pug

block title
  title #{title} : Role List

block content
  div.columns
    div.column
      h3.title.is-3.has-icon
        span.icon.is-medium
          i.fas.fa-list
        span Roles
      table.table.is-striped.is-middle-aligned.is-fullwidth
        thead
          tr
            th Name
            if user && user.isAdmin
              th Edit
        tbody
          each role in roles
            tr
              td= role.name
              if user && user.isAdmin
                td
                  a(href='/roles/' + role.id + '/edit') edit
      if user && user.isAdmin
        a(href='/roles/create')
          button.button.is-primary Add role
